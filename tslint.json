{
  "extends": "tslint-config-standard",
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "semicolon": [
      true,
      "always"
    ],
    "no-console": [
      false
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "arrays": "always",
          "exports": "always",
          "functions": "always",
          "imports": "always",
          "objects": "always",
          "typeLiterals": "always"
        },
        "singleline":{
          "arrays": "always",
          "exports": "always",
          "functions": "never",
          "imports": "always",
          "objects": "always",
          "typeLiterals": "always"
        },
        "esSpecCompliant": true
      }
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "asyncArrow": "always",
        "method": "always",
        "named": "always"
      }
    ],
    "no-trailing-whitespace": false,
    "typedef-whitespace": [
      false,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace"
      }
    ],
    "await-promise": [
      true
    ],
    "deprecation": true,
    "no-floating-promises": true,
    "type-literal-delimiter": true
  }
}